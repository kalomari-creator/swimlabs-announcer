[Unit]
Description=SwimLabs Announcer - Multi-Location Management System
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=swimlabs-server
WorkingDirectory=/home/swimlabs-server/Desktop/announcer
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Restart on failure
RestartSec=10
KillMode=process

# Environment
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
